{% extends 'base.html.twig' %}

{% block body %}
    <h1>InformationEntry</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ informationEntry.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ informationEntry.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ informationEntry.content }}</td>
        </tr>
        <tr>
            <th>Dateadded</th>
            <td>{% if informationEntry.dateAdded %}{{ informationEntry.dateAdded|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                {% if informationEntry.backgroundImageName %}
                    <img src="{{ vich_uploader_asset(informationEntry, 'backgroundImageFile') }}"
                         alt="{{ informationEntry.title }}"/>
                {% else %}
                    No image
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entry_information_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('entry_information_edit', { 'id': informationEntry.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
