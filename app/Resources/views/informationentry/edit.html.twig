{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-success padded-page">
        <div class="panel-heading">
            <h3 class="panel-title">Edit Entry</h3>
        </div>
        <div class="panel-body" id="edit-entry-form">
            <div>
                {{ form_start(edit_form) }}
                {{ form_row(edit_form.send, { 'label': 'Edit' }) }}
                {{ form_widget(edit_form) }}
                {% if informationEntry.backgroundImageName %}
                    <img src="{{ vich_uploader_asset(informationEntry, 'backgroundImageFile') }}"
                         alt="{{ informationEntry.title }}" class="admin-image-preview"/>
                {% endif %}
                {{ form_end(edit_form) }}
            </div>
            <div>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>
            <div>
                <a href="{{ path('entry_information_index') }}">Back to the list</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/color-picker-initialization.js"></script>
{% endblock %}
