{% extends 'base.html.twig' %}

{% block body %}
    <h1>Information Entries</h1>
    <h2><a href="{{ path('admin_index') }}">Go back to admin index</a></h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for informationEntry in informationEntries %}
            <tr>
                <td><a href="{{ path('entry_information_show', { 'id': informationEntry.id }) }}">{{ informationEntry.id }}</a></td>
                <td>{{ informationEntry.title }}</td>
                <td>{{ informationEntry.content }}</td>
                <td>
                    {% if informationEntry.backgroundImageName %}
                        <img src="{{ vich_uploader_asset(informationEntry, 'backgroundImageFile') }}"
                             alt="{{ informationEntry.title }}"/>
                    {% else %}
                        No image
                    {% endif %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entry_information_show', { 'id': informationEntry.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entry_information_edit', { 'id': informationEntry.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entry_information_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
